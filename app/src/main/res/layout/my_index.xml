<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="我的"
            android:background="@color/dianpingorange"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/my_index_login_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/portrait_def"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/my_index_login_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/my_index_login_image"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:text="点击登录"
                    android:drawableRight="@drawable/arrow_normal"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:padding="10dp">

                <TextView
                    android:id="@+id/my_index_nav_dianping"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:drawableTop="@drawable/my_index_dianping_icon_image"
                    android:text="我的点评"
                    />

                <TextView
                    android:id="@+id/my_index_nav_collect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="我的收藏"
                    android:drawableTop="@drawable/my_index_collect_icon_image"/>

                <TextView
                    android:id="@+id/my_index_nav_coupon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="优惠券"
                    android:drawableTop="@drawable/my_index_coupon_icon_image"/>
            </LinearLayout>

            <TextView
                android:id="@+id/my_index_item_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@color/white"
                android:drawableRight="@drawable/arrow_normal"
                android:textSize="18sp"
                android:text="我的订单" />

            <TextView
                android:id="@+id/my_index_item_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@color/white"
                android:drawableRight="@drawable/arrow_normal"
                android:textSize="18sp"
                android:text="我的钱包" />

            <TextView
                android:id="@+id/my_index_item_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@color/white"
                android:drawableRight="@drawable/arrow_normal"
                android:textSize="18sp"
                android:text="待点评" />

            <TextView
                android:id="@+id/my_index_item_day_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@color/white"
                android:drawableRight="@drawable/arrow_normal"
                android:textSize="18sp"
                android:text="每日推荐" />

            <TextView
                android:id="@+id/my_index_item_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@color/white"
                android:drawableRight="@drawable/arrow_normal"
                android:textSize="18sp"
                android:text="最近浏览" />

            <TextView
                android:id="@+id/my_index_item_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@color/white"
                android:drawableRight="@drawable/arrow_normal"
                android:textSize="18sp"
                android:text="设置" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>